<%- include("partials/header"); -%>

<h1>Home</h1>
<p> <%= homeStartingContent %> </p>

<% posts.forEach(function(post){ %>
    <h1> <%= post.title %> </h1>
    <% const bodyLengthMax = 20 %>
    <% if(post.body.length > bodyLengthMax){ %>
        <p>
            <%= post.body.substring(0,bodyLengthMax) + " ..." %>
            <a href="/posts/<%= post.title %>">Read More</a>
        </p>
    <% } else { %>
        <p> <%= post.body %> </p>
    <% } %>
<% }) %>

<%- include("partials/footer"); -%>